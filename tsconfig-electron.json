{
    "compilerOptions":{
        "strict":true,
        "outDir":"build/app",
        "target":"ESNext",
        "lib":["ESNext","DOM"],
        "module":"commonjs",
        "esModuleInterop":true,
        "baseUrl":".",
        "paths":{
            "services/*":["app/services/*"]
        }
    },
    "include":[
        "**/*.d.ts",
        "app/*.ts",
        "lib/*.ts"
    ],
    "exclude":[
        "node_modules"
    ]
}