{
    "compilerOptions":{
        "strict":true,
        "jsx":"react",
        "lib":["dom","ESNext"],
        "target":"ESNext",
        "esModuleInterop":true,
        "baseUrl":".",
        "moduleResolution":"node",
        "paths":{
            "components/*":["web/components/*"],
            "hooks/*":["web/hooks/*"],
            "store/*":["web/store/*"],
            "services/*":["app/services/*"],
            "apis/*":["web/apis/*"]
        }
    },
    "include":[
        "**/*.d.ts",
        "**/*.tsx",
        "**/*.ts"
    ],
    "exclude":[
        "node_modules"
    ]
}