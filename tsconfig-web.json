{
    "compilerOptions":{
        "strict":true,
        "jsx":"react",
        "lib":["dom","ESNext"],
        "target":"ESNext",
        "esModuleInterop":true,
        "baseUrl":".",
        "moduleResolution":"node",
        "paths":{
            "components/*":["web/components/*"],
            "hooks/*":["web/hooks/*"],
            "store/*":["web/store/*"],
            "api/*":["web/api/*"]
        }
    },
    "include":[
        "**/*.d.ts",
        "web/*.tsx",
        "web/*.ts",
        "lib/*.ts"
    ],
    "exclude":[
        "node_modules"
    ]
}